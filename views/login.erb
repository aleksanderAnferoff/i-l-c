<h2>Registration: </h2>

<form action="/login" method="POST">
  
  <div class="form-group">
    <label>Email</label>
    <input name="email" style="width: 400px" type="text" class="form-control"  placeholder="email@gmail.com" value="<%=@email%>">
  </div>

  <div class="form-group">
    <label> Name</label>
    <input name="name" style="width: 400px" type="text" class="form-control"  placeholder="name" value="<%=@name%>">
  </div>

  <div class="form-group">
    <label>Lastname</label>
    <input name="lastname" style="width: 400px" type="text" class="form-control"  placeholder="lastname"value="<%=@lastname%>">
  </div>

  <button type="submit" class="btn btn-primary">Button</button>

</form>  

<h2>Google authorization:</h2>

<form action="/authorization" method="POST">
  <button type="Google" class="btn btn-primary">Google</button>
</form>